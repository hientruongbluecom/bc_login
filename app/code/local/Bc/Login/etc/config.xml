<config>
    <modules>
        <Bc_Login>
            <version>0.1.0</version>
        </Bc_Login>
    </modules>
    <global>
        <models>
            <bc_login>
                <class>Bc_Login_Model</class>
            </bc_login>
        </models>
        <helpers>
            <bc_login>
                <class>Bc_Login_Helper</class>
            </bc_login>
        </helpers>
        <blocks>
            <bc_login>
                <class>Bc_Login_Block</class>
            </bc_login>
        </blocks>
    </global>
    <frontend>
        <layout>
            <updates>
                <bc_login>
                    <file>bc_login.xml</file>
                </bc_login>
            </updates>
        </layout>
        <routers>
            <bc_login>
                <use>standard</use>
                <args>
                    <module>Bc_Login</module>
                    <frontName>login</frontName>
                </args>
            </bc_login>
            <customer>
                <args>
                    <modules>
                        <bc_login before="Mage_Customer">Bc_Login</bc_login>
                    </modules>
                </args>
            </customer>
        </routers>
    </frontend>
    <adminhtml>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <bcajaxlogin translate="title" module="login">
                                            <title>Bluecom</title>
                                            <sort_order>70</sort_order>
                                        </bcajaxlogin>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
    <default>
        <bcajaxlogin>
            <settings>
                <enabled>1</enabled>
                <jquery>0</jquery>
                <jqueryui>1</jqueryui>
                <redirection>1</redirection>
            </settings>
        </bcajaxlogin>
    </default>
</config>